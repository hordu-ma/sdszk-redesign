# CI环境服务器配置文件
NODE_ENV=test

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/sdszk_test

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_ENABLED=true

# JWT配置
JWT_SECRET=ci-test-secret-key-for-testing-only-do-not-use-in-production

# 服务器配置
PORT=3000
HOST=0.0.0.0

# 安全配置
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000

# 日志配置
LOG_LEVEL=error
LOG_FORMAT=json

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# CI特殊配置
CI=true
SKIP_AUTH_CHECKS=false
TEST_DATA_CLEANUP=true
