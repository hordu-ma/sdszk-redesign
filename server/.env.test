# 测试环境配置
NODE_ENV=test

# 数据库配置（由测试设置动态生成）
MONGODB_URI=mongodb://localhost:27017/sdszk-test

# JWT配置
JWT_SECRET=test-jwt-secret-key-2025
JWT_REFRESH_SECRET=test-jwt-refresh-secret-key-2025
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Redis配置（使用redis-mock）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# 端口配置
PORT=3001

# 日志配置
LOG_LEVEL=error
SUPPRESS_TEST_LOGS=true

# 文件上传配置
UPLOAD_MAX_SIZE=1048576
UPLOAD_PATH=./test-uploads

# API限流配置
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# 跨域配置
CORS_ORIGIN=http://localhost:5173

# 测试专用配置
TEST_TIMEOUT=10000
TEST_CLEANUP=true
