{
  "name": "sdszk-redesign",
  "version": "1.0.0",
  "description": "山东省大中小学思政课一体化教育平台",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "deploy:aliyun": "bash scripts/deployment/deploy-aliyun.sh",
    "deploy:aliyun:frontend": "bash scripts/deployment/deploy-aliyun.sh frontend",
    "deploy:aliyun:backend": "bash scripts/deployment/deploy-aliyun.sh backend",
    "deploy:aliyun:fullstack": "bash scripts/deployment/deploy-aliyun.sh fullstack",
    "deploy:quick": "bash scripts/deployment/quick-deploy.sh",
    "deploy:quick:frontend": "bash scripts/deployment/quick-deploy.sh frontend",
    "deploy:quick:backend": "bash scripts/deployment/quick-deploy.sh backend",
    "pm2:status": "bash scripts/deployment/pm2-manager.sh status",
    "pm2:restart": "bash scripts/deployment/pm2-manager.sh restart",
    "pm2:logs": "bash scripts/deployment/pm2-manager.sh logs",
    "pm2:health": "bash scripts/deployment/pm2-manager.sh health",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:basic": "playwright test tests/e2e/basic.spec.ts",
    "test:e2e:performance": "playwright test tests/e2e/performance.spec.ts",
    "test:e2e:ci": "playwright test tests/e2e/basic.spec.ts --reporter=github,html",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report playwright-report",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint 'src/**/*.{js,ts,vue}' --fix --max-warnings 400",
    "lint:backend": "eslint 'server/**/*.js' --ignore-pattern 'server/scripts/mongo-init.js' --ignore-pattern 'server/tests/**' --ignore-pattern 'server-dist/**' --fix --max-warnings 80",
    "lint:vue": "eslint 'src/**/*.vue' --fix",
    "lint:server": "eslint 'server/**/*.js' --ignore-pattern 'server/scripts/mongo-init.js' --ignore-pattern 'server/tests/**' --fix",
    "format": "prettier --write src/",
    "verify:api-paths": "node scripts/verify-api-paths.cjs",
    "wait-on": "wait-on",
    "server": "node server/app.js",
    "server:dev": "nodemon server/app.js",
    "prepare": "husky install",
    "audit:fix": "npm audit fix --force",
    "build:aliyun": "vue-tsc && vite build --config vite.config.aliyun.ts --mode aliyun",
    "db:tunnel": "bash scripts/database/mongodb-tunnel.sh",
    "db:verify": "bash scripts/database/verify-database.sh"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^7.0.1",
    "@element-plus/icons-vue": "^2.3.2",
    "@tinymce/tinymce-vue": "6.3.0",
    "ant-design-vue": "^4.2.6",
    "axios": "^1.11.0",
    "dayjs": "^1.11.13",
    "dompurify": "3.2.6",
    "echarts": "^6.0.0",
    "element-plus": "^2.10.7",
    "marked": "16.2.1",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "vue": "^3.5.18",
    "vue-advanced-cropper": "^2.8.9",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@playwright/test": "^1.54.2",
    "@types/dompurify": "3.0.5",
    "@types/marked": "5.0.2",
    "@types/mongoose": "5.11.96",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "8.39.1",
    "@typescript-eslint/parser": "8.39.1",
    "@vitejs/plugin-vue": "6.0.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "@vue/test-utils": "2.4.6",
    "@vueuse/core": "13.6.0",
    "eslint": "9.33.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "happy-dom": "18.0.1",
    "husky": "^9.1.7",
    "js-yaml": "4.1.0",
    "jsdom": "26.1.0",
    "lint-staged": "16.1.5",
    "mongoose": "8.17.1",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "sass": "^1.90.0",
    "terser": "^5.43.1",
    "typescript": "~5.9.2",
    "unplugin-auto-import": "^20.0.0",
    "unplugin-vue-components": "^29.0.0",
    "vite": "7.1.2",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-html": "^3.2.2",
    "vitest": "3.2.4",
    "vue-eslint-parser": "10.2.0",
    "vue-tsc": "3.0.5",
    "wait-on": "7.2.0"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": "eslint --fix",
    "*.{js,css,md,vue,ts}": "prettier --write"
  }
}
