{
  "name": "sdszk-redesign",
  "version": "1.0.0",
  "description": "山东省大中小学思政课一体化教育平台",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:gh-pages": "vite build --config vite.config.gh-pages.ts",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:ui": "playwright test tests/e2e --ui",
    "test:e2e:report": "playwright show-report test-results/playwright-report",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js",
    "prepare": "husky install",
    "deploy": "npm run build:gh-pages && gh-pages -d dist"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^7.0.1",
    "@element-plus/icons-vue": "^2.1.0",
    "@vueup/vue-quill": "^1.2.0",
    "ant-design-vue": "^4.0.3",
    "axios": "^1.9.0",
    "dayjs": "^1.11.9",
    "echarts": "^5.6.0",
    "element-plus": "^2.3.14",
    "pinia": "^2.1.6",
    "pinia-plugin-persistedstate": "^4.3.0",
    "quill": "^2.0.3",
    "vue": "^3.3.4",
    "vue-advanced-cropper": "^2.8.9",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.38.0",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^18.17.17",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "@vitest/coverage-v8": "^0.34.4",
    "@vitest/ui": "^0.34.4",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "sass": "^1.68.0",
    "terser": "^5.41.0",
    "typescript": "~5.2.0",
    "vite": "^4.4.9",
    "vitest": "^0.34.4",
    "vue-tsc": "^1.8.11"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": "eslint --fix",
    "*.{js,css,md,vue,ts}": "prettier --write"
  }
}
