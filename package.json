{
  "name": "sdszk-redesign",
  "version": "1.0.0",
  "description": "山东省大中小学思政课一体化教育平台",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "deploy:backend": "bash scripts/deploy-backend.sh",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report playwright-report",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "server": "node server/app.js",
    "server:dev": "nodemon server/app.js",
    "prepare": "husky install",
    "test:api": "node scripts/test-api-connectivity.mjs",
    "build:aliyun": "vue-tsc && vite build --config vite.config.aliyun.ts --mode aliyun",
    "deploy:aliyun": "bash scripts/deploy-frontend.sh"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^7.0.1",
    "@element-plus/icons-vue": "^2.3.2",
    "@vueup/vue-quill": "^1.2.0",
    "ant-design-vue": "^4.2.6",
    "axios": "^1.11.0",
    "dayjs": "^1.11.13",
    "echarts": "^6.0.0",
    "element-plus": "^2.10.7",
    "helmet": "8.1.0",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "vue": "^3.5.18",
    "vue-advanced-cropper": "^2.8.9",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/js-yaml": "4.0.9",
    "@types/mongoose": "5.11.96",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "8.39.1",
    "@typescript-eslint/parser": "8.39.1",
    "@vitejs/plugin-vue": "6.0.1",
    "@vitest/ui": "3.2.4",
    "@vueuse/core": "13.6.0",
    "eslint": "9.33.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "happy-dom": "18.0.1",
    "husky": "^9.1.7",
    "js-yaml": "4.1.0",
    "jsdom": "^26.1.0",
    "lint-staged": "16.1.5",
    "mongodb-memory-server": "10.2.0",
    "mongoose": "8.17.1",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "sass": "^1.90.0",
    "terser": "^5.43.1",
    "typescript": "~5.9.2",
    "unplugin-auto-import": "^20.0.0",
    "unplugin-vue-components": "^29.0.0",
    "vite": "7.1.2",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-imagemin": "0.4.0",
    "vitest": "3.2.4",
    "vue-eslint-parser": "10.2.0",
    "vue-tsc": "3.0.5"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": "eslint --fix",
    "*.{js,css,md,vue,ts}": "prettier --write"
  }
}
