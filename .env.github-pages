# GitHub Pages环境配置
NODE_ENV=production

# API配置 - 使用公共CORS代理服务，解决GitHub Pages跨域问题
VITE_API_BASE_URL=https://api.allorigins.win/raw?url=https://api.sust.edu.cn/api
# 备用代理服务选项
# VITE_API_BASE_URL=https://yacdn.org/proxy/https://api.sust.edu.cn/api
# VITE_API_BASE_URL=https://proxy.cors.sh/https://api.sust.edu.cn/api
# VITE_API_BASE_URL=https://corsproxy.io/?https://api.sust.edu.cn/api

# 启用模拟数据作为备用方案
VITE_ENABLE_MOCK_FALLBACK=true
VITE_API_MOCK=false

# 调试配置
VITE_APP_DEBUG=true
VITE_ENABLE_LOGGER=true  # 保持日志开启便于调试

# 缓存配置
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=3600
VITE_CACHE_MAX_SIZE=100
